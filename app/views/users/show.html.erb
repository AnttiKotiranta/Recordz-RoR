<h1>
  <%= @user.username %>
</h1>

<p>Number of records in collection: <%=@user.records.count%></p>
<table class="table table-hover">
	<thead>
	 <tr>
	  <th>Name<th>
	 </tr>
	</th>
	<tbody>
	<% @user.records.each do |r| %>
	 <tr>
	  <td><%=link_to r.name, record_path(r) %></td>
	</tr>
	<%end%>
	</tbody>
</table>



<br>
<p>
 <% if @user == current_user %>
   <%= link_to 'Edit', edit_user_path(@user), class:"btn btn-primary" %>
<br>
<br>
   <%= link_to 'Destroy account', user_path(@user), method: :delete, data: {confirm: 'Are you sure?' }, class:"btn btn-danger" %>
 <%end%>
</p>
